<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateVideojuego">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#27374D"
        android:titleTextColor="@color/toolbar_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Modificar Videojuego"
        android:theme="@style/ToolbarTheme">

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edit_ModificarTitulo"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nuevo Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_ModificarDesarrollador"
        android:layout_width="260dp"
        android:layout_height="76dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:hint="Nuevo Desarrollador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ModificarTitulo" />

    <EditText
        android:id="@+id/edit_ModificarLanzamiento"
        android:layout_width="262dp"
        android:layout_height="77dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nueva Fecha de Lanzamiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ModificarDesarrollador" />


    <Button
        android:id="@+id/addButton"
        android:layout_width="396dp"
        android:layout_height="62dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/button_color"
        android:onClick="guardar"
        android:text="GUARDAR"
        android:textAllCaps="false"
        android:textColor="@color/toolbar_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ModificarLanzamiento" />
</androidx.constraintlayout.widget.ConstraintLayout>